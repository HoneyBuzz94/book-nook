<body>
  <h1>{{username}}'s Nook</h1>
  <button class="btn" id="logout">Logout</button>
  <a href="/journal"><button>Create a new entry</button></a>
  {{#each books as |book|}}
    <div class="row align-center mb-5">
      <div class="col-md-6">
        <h2>{{book.title}} by {{book.author}}</h2>
        <p>{{book.time_stamp}}</p>
      </div>
      <div class="col-md-6">
        <p>{{book.synopsis}}</p>
        <p>{{book.review}}</p>
      </div>
    </div>
  {{/each}}

</body>

<script src="/js/logout.js"></script>