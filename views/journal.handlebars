<link rel="stylesheet" href="/css/style.css">
<h2 class="text-info display-4">Journal</h2>
<div class=" d-flex flex-column mb-2">
  <form action="/api/books" method="POST">
    <div class="mb-2">
      <label for="title">Title</label>
      <input id="title" class="" type="text" name="title" required />
    </div>
    <div class="mb-2">
      <label for="author">Author</label>
      <input id="author" type="text" name="author" required />
    </div>
    <div class="mb-2">
      <label for="synopsis">Synopsis</label>
      <input id="synopsis" class="p-3" type="text" name="synopsis" required />
    </div>
    <p class="mb-0">Rating</p>
    <div id="my-rating" class="rating-box">
      <div id='rating' class="mb-2">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
      </div>
      {{!-- Hidden inputs --}}
      <div>
        <input id="user_id" type="hidden" name="user_id" value={{userId}} />
        <input id="time_stamp" type="hidden" name="time_stamp" value={{timeStamp}} />
      </div>
      <div>
        <button type="submit" class="btn btn-outline-secondary ">Submit</button>
      </div>
  </form>
</div>
<script src="/js/journal.js"></script>