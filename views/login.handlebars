<h2 class="text-info display-4">User Login</h2>

<form class="form login-form">
  <div class="form-group">
    <label for="username-li">Username</label>
    <input class="form-input" type="text" id="username-li" required/>
  </div>
  <div class="form-group">
    <label for="password-li">Password</label>
    <input class="form-input" type="password" id="password-li" required/>
  </div>
  <div class="form-group">
    <button class="btn btn-outline-secondary" type="submit">Login</button>
  </div>
</form>

<h2 class="text-info display-4">Create an account</h2>

<form class="form new-account-form">
  <div class="form-group">
    <label for="email-na">Email</label>
    <input class="form-input" type="email" id="email-na" required/>
  </div>
  <div class="form-group">
    <label for="username-na">Username</label>
    <input class="form-input" type="text" id="username-na" required/>
  </div>
  <div class="form-group">
    <label for="password-na">Password</label>
    <input class="form-input" type="password" id="password-na" required/>
  </div>
  <div class="form-group">
    <button class="btn btn-outline-secondary" type="submit">Create account</button>
  </div>
</form>

<script src="/js/login.js"></script>
